{
  "comments": {
    "lineComment": "#"
  },
  "autoClosingPairs": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ]
  ],
  "surroundingPairs": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ]
  ],
  // This pattern would be improved by semantic matching, but I'm not sure that's possible.
  "wordPattern": "[^#$'-,.:-?A-^{-}\\s]+|\\$.|[A-Z]|\\\\[1-9]|#{2,}|[+%]",
  "folding": {
    "offSide": false
  },
  "autoCloseBefore": ";}])> \n\t"
}

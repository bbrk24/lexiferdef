{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lexifer",
	"patterns": [
        {
            "name": "comment.line.number-sign.def",
            "match": "#.*"
        },
        {
            "name": "constant.language.def",
            "match": "(std-((ipa|digraph)-features|assimilations))|coronal-metathesis"
        },
        {
            "name": "keyword.other.def",
            "match": "(with|letters|random-rate|words|filter|reject)(?=:)"
        },
        {
            "name": "variable.other.def",
            "match": "(?<!\\$)[A-Z]"
        },
        {
            "name": "entity.name.type.def",
            "match": "\\$[^ #]"
        },
        {
            "name": "constant.numeric.def",
            "match": "(?<=:)\\s*[0-9.]+"
        },
        {
            "name": "invalid.illegal.def",
            "match": "\\$(\\s|$|(?=#))"
        },
        {
            "name": "keyword.operator.def",
            "match": "[%!?]"
        },
        {
            "name": "string.unquoted.def",
            "match": "(?<=[=;>$A-Z0-9?!])[^#;>$A-Z?!=:0-9]+|(?<=^|[%+\\-])[^=\\-+#:]+|(?<!with|random-rate):\\K[^#;>$A-Z?!=0-9:]+"
        }
    ],
	"scopeName": "source.def"
}
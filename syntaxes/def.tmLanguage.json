{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lexifer",
	"patterns": [
        {
            "name": "comment.line.number-sign.def",
            "match": "#.*"
        },
        {
            "name": "constant.language.def",
            "match": "(std-((ipa|digraph)-features|(assimila|rejec)tions))|coronal-metathesis"
        },
        {
            "name": "keyword.other.def",
            "match": "(with|letters|random-rate|words|filter|reject|categories)(?=:)"
        },
        {
            "name": "variable.other.def",
            "match": "^[A-Z]\\s|(?<=[^$])[A-Z]"
        },
        {
            "name": "entity.name.type.def",
            "match": "\\$[^#\\s]|\\\\\\d"
        },
        {
            "name": "constant.numeric.def",
            "match": "(?<=:)\\s*[0-9.]+|(?<={(\\d|,)*)\\d"
        },
        {
            "name": "invalid.illegal.def",
            "match": "\\{,|^[A-Z]{2,}"
        },
        {
            "name": "keyword.operator.def",
            "match": "[%!?+*]"
        },
        {
            "name": "string.unquoted.def",
            "match": "(?<=[^{]\\d+)([^\\^#;>$A-Z?!=:0-9+|*\\.(){}\\[\\]\\\\]|\\\\\\D)+|(?<=\\[)([^\\^#;>$A-Z?!=:0-9+|*\\.(){}\\[\\]\\\\-]|\\\\\\D)+|(?<=\\?)([^\\^#;<>$A-Z?!=:0-9+|*,\\.(){}\\[\\]\\\\]|\\\\\\D)+|(?<=[\\^=;<>$A-Z!*\\.|()}\\]])([^\\^#;>$A-Z?!=:0-9+|*\\.(){}\\[\\]\\\\]|\\\\\\D)+|(?<=^|[%+\\-])([^\\^#;>$A-Z?!=:0-9+*|\\.(){}\\[\\]\\\\]|\\\\\\D)+|(?<!with|random-rate):\\K([^\\^#;>$A-Z?!0-9:+*\\.(){}\\[\\]\\\\]|\\\\\\D)+|(?<!:)\\d"
        }
    ],
	"scopeName": "source.def"
}